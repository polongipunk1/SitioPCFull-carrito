@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}

    <div class="p-2 text-white">
        <h2 class="text-center pt-3">Lista de Roles</h2>

        <div class="pb-2">
            @Html.ActionLink("Crear Rol", "Create", null, new { @class = "btn btn-success" })
        </div>
        <table class="table table-hover table-responsive-sm table-striped table-light table-borderless">
            <tr>
                <th>
                    @*Html.DisplayNameFor(model => model.Name)*@
                    <label>Rol</label>
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @*Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = " text-decoration-none btn-sm btn-outline-success" })
                        @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = " text-decoration-none btn-sm btn-outline-info" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = " text-decoration-none btn-sm btn-outline-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
