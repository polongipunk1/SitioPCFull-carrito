@model IEnumerable<SitioPCFull.Models.venta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="p-2 text-white">
        <h2 class="text-center pt-3">Ventas</h2>
        <table class="table table-hover table-responsive-sm table-striped table-light table-borderless table-sm">
            <thead>
                <tr>
                    <th>No.Registro</th>
                    <th>Fecha de Venta</th>
                    <th>Id del usuario</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.fecha</td>
                            <td>@item.ApplicationUserId</td>
                            <td>@String.Format("{0:C}", item.total)</td>
                            <th>@Html.ActionLink("Detalles", "Details", "venta", new { Id = @item.Id }, null)</th>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

