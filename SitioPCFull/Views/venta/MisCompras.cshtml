@model IEnumerable<SitioPCFull.Models.venta>
@{
    ViewBag.Title = "MicCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-2 text-white">
    <h2 class="text-center pt-3 pb-2">Mis compras</h2>
    <table class="table table-hover table-responsive-sm table-striped table-light table-borderless table-sm">
        <thead>
            <tr>
                <th>No.Registro</th>
                <th>Fecha de Venta</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.fecha</td>
                        <td>@String.Format("{0:C}", item.total)</td>
                        <th>@Html.ActionLink("Detalle", "Details", "venta", new { Id = @item.Id }, new { @class = "btn-sm btn-outline-info text-decoration-none" })</th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>